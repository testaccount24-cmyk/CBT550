         MACRO
&NAME    ENDIF &ELSE,&DOGROUP=
         COPY  $MGBLDEF
         LCLC  &X
&X       SETC  '&$MCVERB(&$MDGLVL)'
         AIF   ('&X' EQ 'IF').CONT010
         AIF   ('&X' EQ 'IFELSE').CONT010
         AIF   ('&X' EQ 'ELSEIF').CONT010
         MNOTE 4,'''ENDIF'' USED TO TERMINATE ''&X'' GROUP'
.CONT010 ANOP  ,
&$MCVERB(&$MDGLVL) SETC 'DO'       FAKE OUT 'ENDO' MACRO
&NAME    ENDO  &ELSE,DOGROUP=&DOGROUP
         MEND
